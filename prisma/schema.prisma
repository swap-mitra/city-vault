generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  files File[]
}

model File {
  id         String   @id @default(cuid())
  filename   String
  cid        String   @unique
  fileSize   Int
  mimeType   String?
  uploadedAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([cid])
  @@index([userId])
  @@index([uploadedAt])
}
